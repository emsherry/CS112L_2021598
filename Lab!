#include <iostream>
using namespace std;

int main()
{
    int n, n1, n2, e = 0, p = 0, o = 0;
    n = 0;
    n2=0;
    do 
    {
        bool Prime = true;
        cout << "Enter a number: ";
        cin >> n;
        
        if (n % 2 == 0)
        {
            cout << "The number is Even!" << endl;
            e++;
        }
        else
        {
            cout << "The number  is Odd!" << endl;
            o++;
        }
        if (n == 0 || n == 1)
        {
            Prime = false;
        }
        else
        {
            for (int i = 2; i <= n/2; i++)
                if (n % i == 0)
                {
                    Prime = false;
                    cout << "The number is not Prime" << endl;
                }

        }
        if (Prime == true)
        {
            cout << "The number is Prime" << endl;
            p++;
        }
        if (n == n1 && n1 == n2)
            break;
        n2 = n1;
        n1 = n;
    } while (1);
    cout << "Total number of Even numbers are: " << e << endl;
    cout << "Total number of Odd numbers are: " << o << endl;
    cout << "Total number of Prime numbers are: " << p << endl;
    return 0;
}           int z=0;
    sort(Stdnt[0],Stdnt[z])
    for(int y=0;y<z;y++)
    {
        cout << Stdnt[y];
    }

}
