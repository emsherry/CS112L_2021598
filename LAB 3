#include <iostream>
using namespace std;
int main()
{
    int N;
    cout <<"Enter no. of rows: ";
    cin >> N;
    int i=1;
    int j,k;
    while(i <= N)
    {
        int j=1;
        while((i+j) <= N)
        {
            cout << " ";
            j++;
        }
        int k=1;
        while(k <= (2*i-1))
        {
            cout << "*";
            k++;
        }
        i++;
        cout << endl;
        
    }
    i=N-1;
    while(i>=0)
    {
        j=1;
        while((i+j) <= N)
        {
            cout << " ";
            j++;
        }
        k=1;
        while(k <= (2*i-1))
        {
            cout << "*";
            k++;
        }
        i--;
        cout << endl;
    }
    return 0;
}
